pipeline {
    agent 'any'
    stages {
        stage('Setup') {
            steps {
                library 'branch-promotion'
                script {
                    promotionConfig.init([ organization: 'fourneth0',
                                           repository: 'tryjenpipe',
                                           source: 'develop',
                                           target: 'staging',
                                           accessTokenId: 'git-access-token',
                                           approveTokenId: 'git-pr-review-token',
                                           versionURL: 'https://shopping-mobile-bff-stag.cloud.sysco.com/health',
                                           versionPropertyName: 'hash',
                    ])
                }

            }
        }
        stage('Create PR') {
            steps {
                createPR(this)
            }
        }
        stage('Approve & Merge PR') {
            steps {
                approveAndMerge(this)
            }
        }

    }
}